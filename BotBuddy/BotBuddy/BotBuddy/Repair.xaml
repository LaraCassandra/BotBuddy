<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BotBuddy.Repair"
             BackgroundColor="White">
    <ContentPage.Content>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FRAME 1 -->
            <Label Text="Your bot needs updates"
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="2"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   FontSize="22"
                   FontAttributes="Bold"
                   Margin="0,80,0,0"
                   x:Name="botName"/>

            <!-- INSTRUCTIONS -->
            <Label Text="Solve the equation to update"
                   Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Grid.RowSpan="2"
                   HorizontalOptions="Center"
                   Margin="0,120,0,0"
                   FontSize="18"/>

            <!-- DONE BUTTON -->
            <Button Text="Done"
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    BackgroundColor="#021D30"
                    TextColor="White"
                    FontAttributes="Bold"
                    Clicked="DoneButtonClicked"
                    CornerRadius="60"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    FontSize="18"/>
            
            <!-- EQUATION VIEW -->
            <Label Grid.Row="4"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Text="Equation"
                   TextColor="Black"
                   FontSize="20"
                   FontAttributes="Bold"
                   BackgroundColor="White"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   x:Name="equation"/>

            <Entry Text=""
                   Grid.Column="1"
                   Grid.Row="5"
                   Grid.ColumnSpan="2"
                   BackgroundColor="White"
                   TextColor="DarkGray"
                   Margin="0,10,0,10"
                   x:Name="userAnswer"/>

            <!-- BOT IMAGE -->
            <Image Source="bot_play"
                       Grid.Row="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Grid.RowSpan="2"
                       x:Name="botImage"/>



        </Grid>
        
    </ContentPage.Content>
</ContentPage>