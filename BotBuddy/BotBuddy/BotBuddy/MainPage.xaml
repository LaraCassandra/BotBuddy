<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BotBuddy.MainPage"
             BackgroundColor="White">

    <StackLayout VerticalOptions="CenterAndExpand">

        <Image VerticalOptions="CenterAndExpand"
               Source="bot_default"
               HeightRequest="380"/>

        <Label Text="Welcome to Bot Buddy"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               TextColor="#021D30"
               FontSize="20"
               FontAttributes="Bold"
               Margin="0,0,0,0"/>

        <Label Text="Let's start by naming your new bot"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               TextColor="Black"
               FontSize="18"
               Margin="0,0,0,20"/>

        <Button Text="Get Started"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                TextColor="White"
                BackgroundColor="#021D30"
                FontAttributes="Bold"
                CornerRadius="60"
                FontSize="18"
                WidthRequest="200"
                Clicked="BeginButtonClicked"/>

    </StackLayout>

</ContentPage>
